  <% elsif params[:web] == "renren" %>
    <div class="fs_btn_box">
      <iframe scrolling="no" frameborder="0" allowtransparency="true" src="http://widget.renren.com/plugin/followbutton?page_id=<%= Constant::RENREN_ID %>&color=0&model=0" style="width:76px;height:23px;" ></iframe>
    </div>
    <div class="gz_weibo"><span><a href="javascript:void(0)" class="logo_r" onclick="javascript:generate_flash_div($('#renren_confirm_share'));">分享到人人</a></span></div>
